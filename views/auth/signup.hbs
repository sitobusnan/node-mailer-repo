<h2>Signup</h2>

<form action="/auth/signup" method="POST" id="form-container">
  <div class="form-group">
      <label for="username">Username</label>
      <input id="username" type="text" name="username" class="form-control" placeholder="JonSnow">
  </div>
  <div class="form-group">
      <label for="password">Password</label>
      <input id="password" class="form-control" type="password" name="password" placeholder="Your password">
  </div>
    <div class="form-group">
  <label for="email">Email</label>
  <input id="email" type="email" name="email" class="form-control" placeholder="Your email">
  </div>
  <button type="submit" class="btn btn-info">Submit</button>
</form>

</div>
